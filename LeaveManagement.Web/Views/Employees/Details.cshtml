@model LeaveManagement.Web.Models.EmployeeLeaveAllocationVM

@{
    ViewData["Title"] = "Details";
}

<h1>View Employee @Model.Firstname and thier LeaveAllocations</h1>

<div>
    <h4>EmployeeLeaveAllocationVM</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Firstname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateJoined)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateJoined)
        </dd>
    </dl>
</div>

<div>
    <ul>
        @foreach(var item in Model.LeaveAllocations)
        {
            <li>
                @item.LeaveType.Name | Allocated days: ( @item.NumberOfDays ) |
                <a asp-controller="Employees" asp-action="EditLeaveAllocation" asp-route-id="@item.Id" class="btn btn-warning">Update Leave Allocation</a>
            </li>
        }
    </ul>
</div>
